<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roxo_fundo"
    tools:context=".ui.Authetication">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
            android:padding="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="@string/txt_title"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="@string/hint_email"
                android:textColorHint="@color/roxo_fundo"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/roxo_fundo"
                app:errorEnabled="true"
                app:helperText="@string/txt_required_fields"
                app:helperTextTextColor="@color/letras_cinzas"
                app:hintTextColor="@color/roxo_fundo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="emailAddress"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/letras_cinzas" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/hint_password"
                android:textColorHint="@color/roxo_fundo"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/roxo_fundo"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/roxo_fundo"
                app:errorEnabled="true"
                app:helperText="@string/txt_required_fields"
                app:helperTextTextColor="@color/letras_cinzas"
                app:hintTextColor="@color/roxo_fundo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="emailAddress"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColor="@color/letras_cinzas" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/button_continue"
                android:textColor="@color/roxo_fundo"
                app:strokeColor="@color/roxo_fundo" />


            <com.google.android.gms.common.SignInButton
                android:id="@+id/buttonGoogle"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/button_continue" />


            <com.facebook.login.widget.LoginButton
                android:id="@+id/buttonFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"

                />

            <TextView
                android:id="@+id/txtEsqueciSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/txt_forget_password"
                android:textAlignment="center"
                android:textColor="@color/roxo_fundo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNovoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/txt_no_client"
                android:textAlignment="center"
                android:textColor="@color/roxo_fundo"
                android:textStyle="bold" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
