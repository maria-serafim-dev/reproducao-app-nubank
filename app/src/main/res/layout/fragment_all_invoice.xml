<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".ui.fragment.AllInvoiceFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/Widget.AppNubank.TextView.Two.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_valor_limite_teste"
            app:drawableStartCompat="@drawable/ic_circle" />

        <TextView
            style="@style/Widget.AppNubank.TextView.Two.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_valor_fatura_fechada"
            app:drawableStartCompat="@drawable/ic_circle"
            />

        <TextView
            style="@style/Widget.AppNubank.TextView.Two.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_valor_fatura_atual"
            app:drawableStartCompat="@drawable/ic_circle" />

        <TextView
            style="@style/Widget.AppNubank.TextView.Two.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_valor_proxima_fatura"
            app:drawableStartCompat="@drawable/ic_circle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_pay"
            style="@style/Widget.AppNubank.Button.Red"
            android:layout_marginBottom="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_anticipate"
            style="@style/Widget.AppNubank.Button.Orange" />

    </LinearLayout>

</LinearLayout>