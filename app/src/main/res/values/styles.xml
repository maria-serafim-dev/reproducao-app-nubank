<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppNubank.TextView.Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/letras_cinzas</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Widget.AppNubank.TextView.Circle" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="Widget.AppNubank.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/roxo_fundo</item>
        <item name="hintTextColor">@color/roxo_fundo</item>
        <item name="boxStrokeColor">@color/roxo_fundo</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="helperText">@string/txt_required_fields</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Widget.AppNubank.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/roxo_fundo</item>
        <item name="android:text">@string/button_continue</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="shapeAppearanceOverlay">@style/Widget.ShapeApperance.Buttom</item>
    </style>

    <style name="Widget.AppNubank.Button.Google" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/letras_cinzas</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/circulo</item>
        <item name="iconTint">@null</item>
        <item name="icon">@drawable/ic_google</item>
        <item name="android:text">@string/text_btn_fazer_login</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:elevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/Widget.ShapeApperance.Buttom.Google</item>
    </style>

    <style name="Widget.ShapeApperance.Buttom" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Widget.ShapeApperance.Buttom.Google" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">2dp</item>
    </style>

    <style name="Widget.AppNubank.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/roxo_fundo</item>
        <item name="strokeColor">@color/roxo_fundo</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:text">@string/button_cancel</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="shapeAppearanceOverlay">@style/Widget.ShapeApperance.Buttom</item>
    </style>

    <style name="Widget.AppNubank.Button.Gray" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/circulo</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.AppNubank.Button.Red" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/red_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.AppNubank.Button.Orange" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.AppNubank.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppNubank.TextView.Two.Icon" parent="Widget.MaterialComponents.TextView">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="drawableEndCompat">@drawable/ic_flecha_direita</item>
    </style>

</resources>