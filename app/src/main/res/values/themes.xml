<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Nubank" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/roxo_fundo</item>
        <item name="colorPrimaryVariant">@color/roxo_fundo</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/white</item>


        <item name="colorSecondary">@color/roxo_fundo</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

    </style>


    <style name="circulo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="circulo.menor" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_logo_nubank_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo_nubank_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Nubank</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>