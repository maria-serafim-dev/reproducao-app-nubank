<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nubank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/roxo_fundo</item>
        <item name="colorPrimaryVariant">@color/roxo_fundo</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/white</item>


        <!-- Secondary brand color. -->>>>>>>>>>>>>>>
        <item name="colorSecondary">@color/roxo_fundo</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="card" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="card_parcelar_compras" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="circulo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_logo_nubank_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo_nubank_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Nubank</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>